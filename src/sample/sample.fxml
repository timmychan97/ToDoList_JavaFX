<AnchorPane minHeight="210.0" minWidth="120.0" prefHeight="550.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <children>
      <HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0" style="-fx-background-color: #666;" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Label style="-fx-font-weight: bold;" text="To Do List" textFill="#bcbcbc" wrapText="true">
               <font>
                  <Font size="22.0" />
               </font>
            </Label>
