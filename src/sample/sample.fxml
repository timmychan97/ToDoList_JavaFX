            <VBox fx:id="listView">
            </VBox>
         </content>
      </ScrollPane>
      <ToolBar prefHeight="40.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
        <items>
          <Button mnemonicParsing="false" onAction="#ButtonAdd_Clicked" text="Add" />
            <Button layoutX="10.0" layoutY="13.0" mnemonicParsing="false" onAction="#ButtonSave_Clicked" text="Save" />
            <Button layoutX="52.0" layoutY="13.0" mnemonicParsing="false" onAction="#ButtonLoad_Clicked" text="Load" />
        </items>
      </ToolBar>
   </children>
